extends ../layouts/nav-bar.pug
block content
	.container(class="d-flex",style="background-color: white")
		.content(style="max-width: 65%; flex-grow:1; word-wrap: break-word; ")
			a(href="#", style="text-decoration-none; color: #db562b; text-decoration: none", onmouseover="this.style.color='#2fa1b3'", onmouseout="this.style.color='#db562b'") 
				h3.mt-4.pl-3(style="border-left: 3px solid #db562b; background-color: #e9e5e5") THá»‚ THAO

			each thethao in theloais.thethao	
					if (thethao.video)
						hr
						.tin-the-gioi(id="thethao-"+thethao.id, data-id=thethao.id)
							.image(id="thethaoImage-"+thethao.id)
								video.embed-responsive(style="width: 200px; border-radius: 10px; height: 110px", controls='')
									source(src=thethao.video, type='video/mp4' )
									|Your browser does not support the video tag.
							.content
								a(href='thethao/news/'+thethao.id, style="text-decoration: none", title=thethao.title)
									h3.m-0= thethao.title
								.link
									a(href='#')= thethao.theloai
									a(href='#')= thethao.hashtag
									a(href='#')= thethao.ngaythang

					if (thethao.source)
						hr
						.tin-the-gioi(id="thethao-"+thethao.id, data-id=thethao.id)
							.image(id="thethaoImage-"+thethao.id)
								a(href=thethao.content, style="text-decoration: none", title=thethao.title, target="_blank")
									img(src=thethao.image)
							.content
								a(href=thethao.content, style="text-decoration: none", title=thethao.title target="_blank")
									h3.m-0= thethao.title
								.link
									a(href='#')= thethao.source
									a(href='#')= thethao.hashtag
									a(href='#')= thethao.ngaythang	
					else				
						hr
						.tin-the-gioi(id="thethao-"+thethao.id, data-id=thethao.id)
							.image(id="thethaoImage-"+thethao.id)
								a(href='thethao/news/'+thethao.id, style="text-decoration: none", title=thethao.title)
									img(src=thethao.image)
							.content
								a(href='thethao/news/'+thethao.id, style="text-decoration: none", title=thethao.title)
									h3.m-0= thethao.title
								.link
									a(href='#')= thethao.theloai
									a(href='#')= thethao.hashtag
									a(href='#')= thethao.ngaythang